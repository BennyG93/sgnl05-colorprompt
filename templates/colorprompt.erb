# Managed by Puppet

if [ -z "$PS1" ]; then
# Probably non-interactive shell..
  return 0
fi

black=";30"
red=";31"
green=";32"
yellow=";33"
blue=";34"
magenta=";35"
cyan=";36"
white=";37"

bg_black=";40"
bg_red=";41"
bg_green=";42"
bg_yellow=";43"
bg_blue=";44"
bg_magenta=";45"
bg_cyan=";46"
bg_white=";47"

bright=";1"
faint=";2"
underline=";4"
blink=";5"

<%- @custom_usercolors.each do |user, colors| -%>
if [ "$USER" = "<%= user %>" ]; then
  userColor="\[\e[0<%- if colors.is_a?(Array) -%><% colors.each do |color| -%>${<%= color %>}<% end -%><%- else -%>${<%= colors %>}<%- end -%>m\]"
el<%- end -%>se
  userColor="\[\e[0<%- if @default_usercolor.is_a?(Array) -%><% @default_usercolor.each do |color| -%>${<%= color %>}<% end -%><%- else -%>${<%= @default_usercolor %>}<%- end -%>m\]"
fi
<% if @server_color and ! @server_color.empty? %>
serverColor="\[\e[0<%- if @server_color.is_a?(Array) -%><%- @server_color.each do |color| -%>${<%= color %>}<%- end -%><%- else -%>${<%= @server_color %>}<%- end -%>m\]"
<% end -%>
<% if @env_name and ! @env_name.empty? %>
env="\[\e[0<%- if @env_color.is_a?(Array) -%><% @env_color.each do |color| -%>${<%= color %>}<%- end -%><%- else -%>${<%= @env_color %>}<%- end -%>m\]<%= @env_name %>\[\e[0m\] "
<% end %>
# Set prompt
if [ $TERM != "dumb" ]; then
  PS1="${env}[$userColor\u\[\e[0m\]@$serverColor\h\[\e[0m\] \W]\\$ "
fi

# Remove variables from the environment
unset userColor serverColor env blue red green yellow blue magenta cyan
unset white bg_black bg_red bg_green bg_yellow bg_blue bg_magenta bg_cyan
unset bg_white bright faint underline blink
