if [ -z "$PS1" ]; then
# Probably non-interactive shell..
  return 0
fi

black=";30"
red=";31"
green=";32"
yellow=";33"
blue=";34"
magenta=";35"
cyan=";36"
white=";37"

bg_black=";40"
bg_red=";41"
